#                proxy_set_header Host $http_host;
#                proxy_set_header X-NginX-Proxy true;
#                auth_basic "Administrator's area";
#                auth_basic_user_file /etc/nginx/wetty.passwd;
#        }

        location /static {
                root /opt/rbt;
                try_files $uri $uri/ =404;
        }

        location /.well-known {
                root /var/www/html;
        }
}
